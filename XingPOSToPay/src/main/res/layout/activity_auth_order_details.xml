<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white_f3f7fd"
    >
    <include layout="@layout/menu_title_layout"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            >
            <ImageView
                android:id="@+id/auth_order_details_imgAuthState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/anto_ysq_icon"
                />
            <TextView
                android:id="@+id/auth_order_details_tvAuthState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易状态"
                android:textSize="@dimen/text_size16"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/xuxian_icon"
            />
        <RelativeLayout
            android:id="@+id/auth_order_details_layoutAuthOrderMoney"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white_ffffff"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >
            <TextView
                android:id="@+id/auth_order_details_tvAuthOrderMoneyTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="押金金额"
                android:textSize="@dimen/text_size14"
                android:textColor="@color/black_333"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/auth_order_details_tvAuthOrderMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/text_size20"
                android:textColor="@color/black_333"
                android:gravity="right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/auth_order_details_tvAuthOrderMoneyTitle"
                android:singleLine="true"
                android:ellipsize="end"
                android:minLines="1"
                android:layout_marginLeft="10dp"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/xuxian_icon"
            />
        <RelativeLayout
            android:id="@+id/auth_order_details_layoutAuthConSumMoney"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white_ffffff"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:visibility="gone"
            >
            <TextView
                android:id="@+id/auth_order_details_tvAuthConSumMoneyTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消费金额"
                android:textSize="@dimen/text_size14"
                android:textColor="@color/black_333"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/auth_order_details_tvAuthConSumMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/text_size20"
                android:textColor="@color/black_333"
                android:gravity="right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/auth_order_details_tvAuthConSumMoneyTitle"
                android:singleLine="true"
                android:ellipsize="end"
                android:minLines="1"
                android:layout_marginLeft="10dp"
                />
        </RelativeLayout>
        <View
            android:id="@+id/auth_order_details_viewAuthConSumMoney"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/xuxian_icon"
            android:visibility="gone"
            />
        <RelativeLayout
            android:id="@+id/auth_order_details_layoutAuthRefundAmount"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white_ffffff"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:visibility="gone"
            >
            <TextView
                android:id="@+id/auth_order_details_tvAuthRefundAmountTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退款金额"
                android:textSize="@dimen/text_size14"
                android:textColor="@color/black_333"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/auth_order_details_tvAuthRefundAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/text_size20"
                android:textColor="@color/black_333"
                android:gravity="right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/auth_order_details_tvAuthRefundAmountTitle"
                android:singleLine="true"
                android:ellipsize="end"
                android:minLines="1"
                android:layout_marginLeft="10dp"
                />
        </RelativeLayout>
        <View
            android:id="@+id/auth_order_details_viewAuthRefundAmount"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/xuxian_icon"
            android:visibility="gone"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white_ffffff"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付方式"
                android:textSize="@dimen/text_size14"
                android:textColor="@color/black_333"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/auth_order_details_tvAuthPayType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/text_size14"
                android:textColor="@color/black_333"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/xuxian_icon"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white_ffffff"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付状态"
                android:textSize="@dimen/text_size14"
                android:textColor="@color/black_333"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/auth_order_details_tvPayStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/text_size14"
                android:textColor="@color/black_333"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/xuxian_icon"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/white_ffffff"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日期/时间"
                android:textSize="@dimen/text_size14"
                android:textColor="@color/black_333"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/auth_order_details_tvAuthPayCreateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/text_size14"
                android:textColor="@color/black_333"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/white_ffffff"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >
            <TextView
                android:id="@+id/auth_order_details_tvAuthOrderIdTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单号"
                android:textSize="@dimen/text_size14"
                android:textColor="@color/black_333"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/auth_order_details_tvAuthOrderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/text_size13"
                android:textColor="@color/black_333"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/auth_order_details_tvAuthOrderIdTitle"
                android:layout_marginLeft="10dp"
                android:gravity="right"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/white_ffffff"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >
            <TextView
                android:id="@+id/auth_order_details_tvChannelOrderNoTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="渠道单号"
                android:textSize="@dimen/text_size14"
                android:textColor="@color/black_333"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/auth_order_details_tvChannelOrderNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/text_size13"
                android:textColor="@color/black_333"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/auth_order_details_tvChannelOrderNoTitle"
                android:layout_marginLeft="10dp"
                android:gravity="right"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/auth_order_details_layoutOldAuthOrderId"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/white_ffffff"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:visibility="gone"
            >
            <TextView
                android:id="@+id/auth_order_details_tvOldAuthOrderIdTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="原订单号"
                android:textSize="@dimen/text_size14"
                android:textColor="@color/black_333"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/auth_order_details_tvOldAuthOrderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/text_size13"
                android:textColor="@color/black_333"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/auth_order_details_tvOldAuthOrderIdTitle"
                android:layout_marginLeft="10dp"
                android:gravity="right"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/xuxian_icon"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="bottom"
        >
        <Button
            android:id="@+id/auth_order_details_btPrint"
            style="@style/button_styles"
            android:text="详情补打"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:stateListAnimator="@null"
            ></Button>
        <Button
            android:id="@+id/auth_order_details_btAuthCancel"
            style="@style/button_styles"
            android:text="预授权撤销"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:stateListAnimator="@null"
            android:visibility="gone"
            ></Button>
        <Button
            android:id="@+id/auth_order_details_btAuthConfrim"
            style="@style/button_styles"
            android:text="预授权完成"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:stateListAnimator="@null"
            android:visibility="gone"
            ></Button>
        <Button
            android:id="@+id/auth_order_details_btAuthConfirmCancel"
            style="@style/button_styles"
            android:text="预授权完成撤销"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:stateListAnimator="@null"
            android:visibility="gone"
            ></Button>
    </LinearLayout>
</LinearLayout>
