<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_f3f7fd"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp">

        <EditText
            android:id="@+id/instalment_refund_etOrderId"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@color/white_f2f2f2"
            android:hint="请输入订单号"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:text=""
            android:textSize="@dimen/text_size14"
            android:textColor="@color/black_333"
            />
        <TextView
            android:id="@+id/instalment_refund_tvQuery"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:background="@color/green_30d60a"
            android:gravity="center"
            android:text="查询"
            android:textColor="@color/white_ffffff"
            android:textSize="@dimen/text_size18"
            android:layout_marginLeft="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/instalment_refund_tvRefundHint"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="退款说明"
        android:textSize="@dimen/text_siz12"
        android:textColor="@color/blue_B0C4DE"
        android:gravity="center_vertical|right"
        android:paddingRight="20dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="持卡人扫描以下二维码或者微信关注'星享空间'公众号查询原分期信息"
        android:textSize="@dimen/text_siz12"
        android:textColor="@color/grey_666666"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        />
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/xxkj_gzh_qrcode_img"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="星享空间"
        android:textSize="@dimen/text_siz12"
        android:textColor="@color/grey_666666"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_gravity="center_horizontal"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已近提交退款申请的请到查询功能进行查询"
        android:textSize="@dimen/text_siz12"
        android:textColor="@color/grey_666666"
        android:layout_marginTop="30dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_gravity="center_horizontal"
        />
</LinearLayout>