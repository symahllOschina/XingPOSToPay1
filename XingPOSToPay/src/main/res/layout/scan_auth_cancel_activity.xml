<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include
        layout="@layout/menu_title_layout"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:visibility="visible"
        >
        <TextView
            android:id="@+id/auth_cancel_tvOrderIdTitle"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="订单号"
            android:textSize="@dimen/text_size16"
            android:textColor="@color/black_000000"
            android:layout_centerVertical="true"
            android:gravity="center"
            />
        <ImageView
            android:id="@+id/auth_cancel_imgScan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/scan_open_icon"
            android:padding="15dp"
            android:layout_alignParentRight="true"
            />
        <EditText
            android:id="@+id/auth_cancel_etOrderId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入预授权单号！"
            android:text=""
            android:textSize="@dimen/text_size14"
            android:textColor="@color/black_333"
            android:inputType="text"
            android:background="@null"
            android:layout_marginLeft="5dp"
            android:paddingLeft="5dp"
            android:layout_toLeftOf="@id/auth_cancel_imgScan"
            android:layout_toRightOf="@id/auth_cancel_tvOrderIdTitle"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="金    额"
            android:textSize="@dimen/text_size16"
            android:textColor="@color/black_000000"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/auth_cancel_etCancelMoney"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="消费金额"
            android:textSize="@dimen/text_size14"
            android:textColor="@color/black_333"
            android:inputType="numberDecimal"
            android:background="@null"
            android:layout_marginLeft="5dp"
            android:paddingLeft="5dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/auth_cancel_ok"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="确 认"
            android:textSize="@dimen/text_size16"
            android:textColor="@color/white_ffffff"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_margin="20dp"
            android:background="@color/green_30d60a"
            ></Button>
    </LinearLayout>


</LinearLayout>
