<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:background="@color/white_ffffff"
    >
    <RelativeLayout
        android:id="@+id/card_verifica_tab_numCardLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
        <TextView
            android:id="@+id/card_verifica_tab_numCardText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="次卡"
            android:textSize="@dimen/text_size18"
            android:layout_centerInParent="true"
            />
        <View
            android:id="@+id/card_verifica_tab_numCardView"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/card_verifica_tab_couponsLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
        <TextView
            android:id="@+id/card_verifica_tab_couponsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="优惠券"
            android:textSize="@dimen/text_size18"
            android:layout_centerInParent="true"
            />
        <View
            android:id="@+id/card_verifica_tab_couponsView"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
</LinearLayout>
