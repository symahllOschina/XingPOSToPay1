<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <include 
            layout="@layout/title_activity"
            />
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >
            <TextView 
                android:id="@+id/write_off_tvOrderIdTitle"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:text="核销劵码"
                android:textSize="@dimen/text_size16"
                android:textColor="@color/black_000000"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                />
            <ImageView 
                android:id="@+id/write_off_imagScan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/scan_open_icon"
                android:padding="15dp"
                android:layout_alignParentRight="true"
                />
            <EditText
                android:id="@+id/write_off_etOrderId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请输入核销劵码！"
                android:text=""
                android:textSize="@dimen/text_size14"
                android:textColor="@color/black_333"
                android:inputType="number"
                android:background="@null"
                android:layout_marginLeft="5dp"
                android:paddingLeft="5dp"
                android:layout_toLeftOf="@id/write_off_imagScan"
                android:layout_toRightOf="@id/write_off_tvOrderIdTitle"
                />
            <!-- 20180413133134725640612990473024 -->
        </RelativeLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <TextView
			    android:id="@+id/write_off_tvOk"
			    android:layout_width="match_parent"
			    android:layout_height="50dp"
			    android:text="确 认"
			    android:textSize="@dimen/text_size16"
			    android:textColor="@color/white_ffffff"
			    android:layout_marginTop="10dp"
			    android:gravity="center"
			    android:layout_margin="20dp"
			    android:background="@color/green_30d60a"
			    ></TextView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
