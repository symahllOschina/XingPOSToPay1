<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingRight="10dp"
            android:gravity="center_vertical"
            >
            <TextView
                android:id="@+id/instalment_query_list_item_tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxxx.xx.xx"
                android:textSize="@dimen/text_siz12"
                android:textColor="@color/black_000000"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单号："
                android:textSize="@dimen/text_siz12"
                android:textColor="@color/black_000000"
                android:layout_marginTop="15dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/instalment_query_list_item_tvMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textSize="@dimen/text_siz12"
                    android:textColor="@color/black_000000"
                    android:layout_alignParentRight="true"

                    />
                <TextView
                    android:id="@+id/instalment_query_list_item_tvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="xxxxxx"
                    android:textSize="@dimen/text_siz12"
                    android:textColor="@color/black_000000"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@id/instalment_query_list_item_tvMoney"
                    android:layout_marginRight="10dp"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/instalment_query_list_item_tvOrderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxxx"
                android:textSize="@dimen/text_siz12"
                android:textColor="@color/black_000000"
                android:layout_marginTop="15dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.3"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/instalment_query_list_item_tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="还款中"
                android:textSize="@dimen/text_siz12"
                android:textColor="@color/black_000000"
                android:ems="4"
                android:gravity="center"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>