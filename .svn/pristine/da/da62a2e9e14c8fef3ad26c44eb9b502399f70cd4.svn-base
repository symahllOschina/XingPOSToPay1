<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_f3f7fd"
    >
    <include layout="@layout/title_activity"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单号："
                    android:textSize="@dimen/text_size14"
                    android:textColor="@color/grey_666666"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/instalment_refund_tvOrderNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xxxx"
                    android:textSize="@dimen/text_size14"
                    android:textColor="@color/grey_666666"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="交易时间："
                    android:textSize="@dimen/text_size14"
                    android:textColor="@color/grey_666666"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/instalment_refund_tvTxnTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xxxx"
                    android:textSize="@dimen/text_size14"
                    android:textColor="@color/grey_666666"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="持卡人姓名："
                    android:textSize="@dimen/text_size14"
                    android:textColor="@color/grey_666666"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/instalment_refund_tvAccName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xxxx"
                    android:textSize="@dimen/text_size14"
                    android:textColor="@color/grey_666666"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="原交易金额："
                    android:textSize="@dimen/text_size14"
                    android:textColor="@color/grey_666666"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/instalment_refund_tvTxnAmt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xxxx"
                    android:textSize="@dimen/text_size14"
                    android:textColor="@color/grey_666666"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分期期数："
                    android:textSize="@dimen/text_size14"
                    android:textColor="@color/grey_666666"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/instalment_refund_tvTxnterms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xxxx"
                    android:textSize="@dimen/text_size14"
                    android:textColor="@color/grey_666666"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="应还款金额："
                    android:textSize="@dimen/text_size14"
                    android:textColor="@color/grey_666666"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/instalment_refund_tvSumMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xxxx"
                    android:textSize="@dimen/text_size14"
                    android:textColor="@color/grey_666666"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已还款金额："
                    android:textSize="@dimen/text_size14"
                    android:textColor="@color/grey_666666"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/instalment_refund_tvSumAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xxxx"
                    android:textSize="@dimen/text_size14"
                    android:textColor="@color/grey_666666"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已还期数："
                    android:textSize="@dimen/text_size14"
                    android:textColor="@color/grey_666666"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/instalment_refund_tvSumTerms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xxxx"
                    android:textSize="@dimen/text_size14"
                    android:textColor="@color/grey_666666"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未还款金额："
                    android:textSize="@dimen/text_size14"
                    android:textColor="@color/grey_666666"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/instalment_refund_tvRemainAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xxxx"
                    android:textSize="@dimen/text_size14"
                    android:textColor="@color/grey_666666"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商户退款金额："
                    android:textSize="@dimen/text_size14"
                    android:textColor="@color/grey_666666"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/instalment_refund_tvRefundMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xxxx"
                    android:textSize="@dimen/text_size14"
                    android:textColor="@color/grey_666666"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商户退款利息："
                    android:textSize="@dimen/text_size14"
                    android:textColor="@color/grey_666666"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/instalment_refund_tvCancelInterest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xxxx"
                    android:textSize="@dimen/text_size14"
                    android:textColor="@color/grey_666666"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                >
                <Button
                    android:id="@+id/instalment_refund_btApplyRefund"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="申请退款"
                    android:textSize="@dimen/text_size18"
                    android:textColor="@color/white_ffffff"
                    android:background="@color/green_30d60a"
                    android:gravity="center"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
