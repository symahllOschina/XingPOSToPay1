<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <include 
            layout="@layout/title_activity"
            />
        <RelativeLayout
            android:id="@+id/scan_refund_layoutRefundOrderId"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="visible"
            >
            <TextView 
                android:id="@+id/scan_refund_tvOrderIdTitle"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:text="交易订单号"
                android:textSize="@dimen/text_size16"
                android:textColor="@color/black_000000"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                />
            <ImageView 
                android:id="@+id/scan_refund_imagScan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/scan_open_icon"
                android:padding="15dp"
                android:layout_alignParentRight="true"
                />
            <EditText
                android:id="@+id/scan_refund_etOrderId" 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请输入交易订单号！"
                android:text=""
                android:textSize="@dimen/text_size14"
                android:textColor="@color/black_333"
                android:inputType="text"
                android:background="@null"
                android:layout_marginLeft="5dp"
                android:paddingLeft="5dp"
                android:layout_toLeftOf="@id/scan_refund_imagScan"
                android:layout_toRightOf="@id/scan_refund_tvOrderIdTitle"
                />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/scan_refund_layoutRefundMoney"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >
            <TextView 
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="退款金额"
                android:textSize="@dimen/text_size16"
                android:textColor="@color/black_000000"
                android:gravity="center"
                />
            <EditText
                android:id="@+id/scan_refund_etOrderMoney"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="不填写则默认全额退款！"
                android:textSize="@dimen/text_size14"
                android:textColor="@color/black_333"
                android:inputType="number|text"
                android:background="@null"
                android:layout_marginLeft="5dp"
                android:paddingLeft="5dp"
                />
        </LinearLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <TextView
			    android:id="@+id/scan_refund_tvOk"
			    android:layout_width="match_parent"
			    android:layout_height="50dp"
			    android:text="确 认"
			    android:textSize="@dimen/text_size16"
			    android:textColor="@color/white_ffffff"
			    android:layout_marginTop="10dp"
			    android:gravity="center"
			    android:layout_margin="20dp"
			    android:background="@color/green_30d60a"
			    ></TextView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
